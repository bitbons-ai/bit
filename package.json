{
  "name": "@mauricio.wolff/bit",
  "version": "1.0.0",
  "description": "CLI tool for scaffolding Astro + PocketBase projects",
  "type": "module",
  "bin": {
    "bit": "src/cli.js"
  },
  "scripts": {
    "test": "node --test tests/",
    "test:watch": "node --test --watch tests/",
    "test:integration": "node --test tests/integration/",
    "test:new": "node --test tests/commands/new.test.js",
    "test:pb": "node --test tests/commands/pb.test.js",
    "test:docker": "node --test tests/commands/docker.test.js",
    "test:all": "npm run test && npm run test:integration",
    "test:clean": "rm -rf test-project && docker rm -f test-project-pb || true",
    "test:version": "node --test tests/commands/version.test.js",
    "test:upgrade": "node --test tests/commands/upgrade.test.js"
  },
  "keywords": [
    "cli",
    "astro",
    "pocketbase",
    "scaffold"
  ],
  "author": "BitBonsai",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "kleur": "^4.1.5",
    "meow": "^13.2.0",
    "node-fetch": "^3.3.2",
    "open": "^10.1.0",
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "get-port": "^7.0.0",
    "execa": "^8.0.1",
    "strip-ansi": "^7.1.0"
  }
}
